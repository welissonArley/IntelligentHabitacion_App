<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Homuai.App.Views.Templates.Header.HeaderWithGirlReading">
    <ContentView.Content>
        <StackLayout Spacing="0">
            <Image x:Name="ImageGirlReading" Source="IconGirlReading"></Image>
            <Grid Margin="20,0,20,0" RowDefinitions="41">
                <Frame Grid.Row="0" HasShadow="True" CornerRadius="7" Padding="0" BackgroundColor="{AppThemeBinding Light={StaticResource BlueDefault}, Dark={StaticResource DarkModeSecondaryColor}}">
                    <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                        <Image x:Name="ImageKingCrown" HeightRequest="20" WidthRequest="20" Margin="10,0,0,0" Source="IconKingCrown"></Image>
                        <Label Margin="15,0,0,0" x:Name="LabelUserName" Style="{x:StaticResource LabelBold}" FontSize="16" VerticalOptions="EndAndExpand"></Label>
                    </StackLayout>
                </Frame>
            </Grid>
        </StackLayout>
    </ContentView.Content>
</ContentView>